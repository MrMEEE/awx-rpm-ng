#!/bin/bash

source $(dirname "$0")/common-functions

VERSION=$(get_version)

DATE=$(date +"%a %b %d %Y %r %Z %z")

PACKAGEVERSION=$1

echo "Generating source and build for awx-rpm-manage version: $PACKAGEVERSION for version: $VERSION"

wget -O /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/SOURCES/awx-rpm-manage-$PACKAGEVERSION.tar.gz https://github.com/MrMEEE/awx-rpm-manage/archive/refs/tags/$PACKAGEVERSION.tar.gz

BUILDVERSION=$(cat /opt/$BASEPATH_DIR/versions/deps/awx-rpm-manage.spec |grep Release: | awk '{ print $2}' | cut -f1 -d%)

if [[ "$BUILDVERSION" == "" ]];then
        NEWBUILDVERSION=1
else
        let "NEWBUILDVERSION=BUILDVERSION+1"
fi

cp /opt/$BASEPATH_DIR/templates/awx-rpm-manage-temp.spec /opt/$BASEPATH_DIR/versions/deps/awx-rpm-manage.spec
cd /opt/$BASEPATH_DIR/versions/
git add deps/awx-rpm-manage.spec

sed -i "s|造VERSION造|$PACKAGEVERSION|g" /opt/$BASEPATH_DIR/versions/deps/awx-rpm-manage.spec
sed -i "s|造DATE造|$DATE|g" /opt/$BASEPATH_DIR/versions/deps/awx-rpm-manage.spec
sed -i "s/Release:.*$/Release: $NEWBUILDVERSION%{dist}/g" /opt/$BASEPATH_DIR/versions/deps/awx-rpm-manage.spec

rpmbuild -bs --define "_topdir /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/" /opt/$BASEPATH_DIR/versions/deps/awx-rpm-manage.spec

mock -r epel-9-x86_64 --enable-network --addrepo /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/RPMS --resultdir /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/RPMS-TMP/ --no-clean /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/SRPMS/awx-rpm-manage-$PACKAGEVERSION-$NEWBUILDVERSION.el9.src.rpm --rpmbuild-opts="--nocheck" --no-cleanup-after
rm -f /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/RPMS-TMP/*.src.rpm
cp /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/RPMS-TMP/*.rpm /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/RPMS/
createrepo_c /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/RPMS/
rm -f /opt/$BASEPATH_DIR/rpmbuilds/$VERSION/RPMS-TMP/*
mock -r epel-9-x86_64 --clean

